{
  "name": "elm-review",
  "version": "1.0.2",
  "description": "Run elm-review from Node.js",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "flow": "flow",
    "test": "npm run elm-tests && xo && npm run flow",
    "elm-tests": "(cd template/ && elm make src/Elm/Review/Main.elm --output=/dev/null) && (cd template/ && elm-test)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jfmengels/node-elm-review.git"
  },
  "bin": {
    "elm-review": "bin/elm-review"
  },
  "keywords": [
    "elm",
    "review",
    "elm-review",
    "lint",
    "linter",
    "elm-lint",
    "check",
    "cli"
  ],
  "author": "Jeroen Engels",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/jfmengels/node-elm-review/issues"
  },
  "homepage": "https://github.com/jfmengels/node-elm-review#readme",
  "xo": {
    "space": 2,
    "prettier": true,
    "rules": {
      "promise/prefer-await-to-then": "off"
    }
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "chokidar": "^3.3.1",
    "cross-spawn": "^6.0.5",
    "elm-json": "^0.2.6",
    "find-up": "^4.1.0",
    "folder-hash": "^3.3.0",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.4",
    "got": "^9.6.0",
    "minimist": "^1.2.0",
    "node-elm-compiler": "^5.0.4",
    "which": "^1.3.1"
  },
  "devDependencies": {
    "eslint": "^6.2.2",
    "flow-bin": "^0.102.0",
    "xo": "^0.24.0"
  }
}
